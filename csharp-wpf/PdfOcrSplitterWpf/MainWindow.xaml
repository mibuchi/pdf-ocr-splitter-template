<Window x:Class="PdfOcrSplitterWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF OCR Splitter WPF" Height="400" Width="600">
    <StackPanel Margin="10">
        <Button Name="btnSelectPdf" Content="PDFを選択" Width="100" Click="btnSelectPdf_Click"/>
        <TextBox Name="txtPdfPath" Margin="0,10,0,10" />
        <Button Name="btnRun" Content="実行" Width="100" Click="btnRun_Click"/>
        <TextBox Name="txtLog" Height="250" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
